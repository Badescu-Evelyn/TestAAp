@model foodrecipe.DataModels.Ingredient

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/details.css" />
</head>
<body>
    <h1>Ingredient Details</h1>

    <div>
        <h4>Ingredient</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 ingredient-label">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10 ingredient-value">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 ingredient-label">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10 ingredient-value">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2 ingredient-label">
                @Html.DisplayNameFor(model => model.Recipe)
            </dt>
            <dd class="col-sm-10 ingredient-value">
                @Html.DisplayFor(model => model.Recipe.Name)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
