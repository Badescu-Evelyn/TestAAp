@{
    ViewData["Title"] = "Healthy Salmon Pasta Recipe";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href=".\css\recipe.css">
    <title>Healthy Salmon Pasta Recipe</title>
</head>
<body>
    <div class="recipe-container">
        <div class="recipe-header">
            <h1 id="recipe-name">Summer Salmon Pasta</h1>
            <div class="image-container">
                <img id="recipe-image" src="https://images.immediate.co.uk/production/volatile/sites/30/2020/08/summer_salmon_pasta_7-8f7c3bf.jpg?quality=90&resize=960,872" alt="Summer Salmon Pasta">
            </div>
        </div>
        <div class="recipe-details">
            <p id="recipe-description">A light and fresh pasta dish with a summery taste of salmon and lemon.</p>
            <div class="details-grid">
                <div><strong>Preparation Time:</strong> <span id="prep-time">10 minutes</span></div>
                <div><strong>Cooking Time:</strong> <span id="cook-time">15 minutes</span></div>
                <div><strong>Difficulty Level:</strong> <span id="difficulty-level">Easy</span></div>
                <div><strong>Category:</strong> <span id="category">Pasta</span></div>
            </div>
        </div>
        <div class="recipe-ingredients">
            <h2>Ingredients</h2>
            <ul id="ingredients-list">
                <li>200g salmon fillets</li>
                <li>300g pasta</li>
                <li>1 lemon, zested and juiced</li>
                <li>2 tbsp olive oil</li>
                <li>100g cherry tomatoes, halved</li>
                <li>Handful of fresh basil leaves</li>
            </ul>
        </div>
        <div class="recipe-instructions">
            <h2>Instructions</h2>
            <ol id="instructions-list">
                <li>Cook the pasta according to package instructions.</li>
                <li>Heat the olive oil in a pan and cook the salmon until flaky.</li>
                <li>Add cherry tomatoes to the pan and cook for 2-3 minutes.</li>
                <li>Mix the lemon zest and juice into the cooked pasta.</li>
                <li>Combine all ingredients and garnish with basil leaves.</li>
            </ol>
        </div>
        <div class="recipe-reviews">
            <h2>Reviews</h2>
            <div id="reviews-list">
                <p><strong>John Doe:</strong> Delicious and easy to make!</p>
                <p><strong>Jane Smith:</strong> My family loved it.</p>
            </div>
        </div>
    </div>
</body>
</html>
